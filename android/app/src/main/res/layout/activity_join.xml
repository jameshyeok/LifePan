<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="#809E9E9E">

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/passwordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#809E9E9E">

        <EditText
            android:id="@+id/idText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="example@kangnam.ac.kr"
            android:inputType="textEmailAddress"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/joinIdNumberLayout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_above="@+id/idLayout"
        android:layout_alignLeft="@+id/idLayout"
        android:layout_marginBottom="16dp"
        android:background="#809E9E9E">

        <EditText
            android:id="@+id/joinIdNumberText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="학번"
            android:inputType="numberDecimal"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/joinNameLayout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/idLayout"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/joinIdNumberLayout"
        android:background="#809E9E9E">

        <EditText
            android:id="@+id/joinNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="이름"
            android:inputType="textPersonName"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#FF4081"
        android:text="REGISTER"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backLoginView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Already registered! Login Me"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>